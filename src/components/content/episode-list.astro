---
import type { Episode } from "src/models/interfaces";
import { fetchMultipleApiUrl } from "src/utils/common";

export interface Props {
  episodeUrls: Array<string>;
}

const { episodeUrls } = Astro.props;
const episodesData = await fetchMultipleApiUrl(episodeUrls);
const episodes: Array<Episode> = episodesData.map((x: any) => x.value);
---

<ul
  class="flex-1 flex flex-col content-start gap-x-3 gap-y-5 pb-8 pr-6 custom-scrollbar"
>
  {
    episodes.map((episode: Episode) => (
      <li>
        <a href={`/episodes/${episode.id}`}>
          <h4 class="text-2xl font-poppins text-black hover:bg-clip-text hover:text-transparent hover:bg-gradient-to-br hover:to-lime-300 hover:from-cyan-800">
            {episode.name}
          </h4>
        </a>

        <div class="text-lg">
          {episode.episode} - {episode.air_date}
        </div>
      </li>
    ))
  }
</ul>

<style lang="scss">
  li:last-child {
    @apply mb-8;
  }
</style>
