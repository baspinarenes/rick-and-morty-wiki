---
import BaseLayout from "../layouts/base.astro";
---

<BaseLayout>
  <div
    class="flex flex-col justify-center items-center h-full w-screen text-2xl"
  >
    <h1 class="mb-8">404</h1>
    <div class="text-black font-poppinsfont-normal mb-4">
      You are lost in the world of Rick and Morty!
    </div>
    <a href="/">Return to the familiar place.</a>
  </div>
</BaseLayout>

<style lang="scss">
  h1 {
    color: #22a2bd;
    background: #22a2bd;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-stroke: 1px black;
    text-shadow: 12px 12px 35px #80fd4c;
    font-size: 20rem;
    line-height: 20rem;
    font-weight: bolder;
    margin-bottom: 40px;
  }

  a {
    @apply mt-2 bg-clip-text text-transparent bg-gradient-to-br to-lime-300 from-cyan-800;
  }
</style>
